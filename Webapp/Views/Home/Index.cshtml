@{
    ViewData["Title"] = "Product List";
}

@section title {
    <title>@ViewData["Title"]</title>
}

<h2>@ViewData["Title"]</h2>

<!-- Botón para agregar nuevo producto -->
<p>
    <a href="@Url.Action("Create", "Product")" class="btn btn-primary">Add New Product</a>
</p>

<!-- Tabla de productos -->
<table class="table">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    <!-- Edit Link -->
                    <a href="@Url.Action("Edit", "Product", new { id = product.ProductId })" class="btn btn-warning">Edit</a>
                    <!-- Delete Link -->
                    <a href="@Url.Action("Delete", "Product", new { id = product.ProductId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>