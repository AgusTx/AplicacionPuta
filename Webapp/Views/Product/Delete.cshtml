@model Webapp.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}
@section title {
    <h1>Product List</h1>
}

<h1>@ViewData["Title"]</h1>

<h4>Are you sure you want to delete this product?</h4>
<hr />

<div class="form-group">
    <label for="Name">Product Name</label>
    <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" readonly />
</div>

<div class="form-group">
    <label for="Price">Price</label>
    <input type="number" id="Price" name="Price" class="form-control" value="@Model.Price" readonly />
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="ProductId" value="@Model.ProductId" />
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete Product</button>
        <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Cancel</a>
    </div>
</form>
