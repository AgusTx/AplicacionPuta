@model IEnumerable<Webapp.Models.Product>

@{
    ViewData["Title"] = "Lista";
}
@section title {
    <h1>Stock Disponible</h1>
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    <a href="@Url.Action("Edit", "Product", new { id = product.ProductId })">Edit</a> |
                    <a href="@Url.Action("Delete", "Product", new { id = product.ProductId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Product")" class="btn btn-primary">Crear nuevo Producto</a>
