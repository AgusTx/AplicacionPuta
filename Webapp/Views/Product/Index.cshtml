@model IEnumerable<Webapp.Models.Product>

@{
    ViewData["Title"] = "Lista";
}
@section title {
    <h1>Stock Disponible</h1>
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id del Producto</th>
            <th>Producto</th>
            <th>Precio</th>
            <th>Stock</th> <!-- 🔹 Nueva columna -->
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Stock</td> <!-- 🔹 Mostrar stock -->
                <td>
                    <a href="@Url.Action("Edit", "Product", new { id = product.ProductId })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Delete", "Product", new { id = product.ProductId })" class="btn btn-danger">Borrar</a>
                    <button class="btn btn-success" onclick="addToCart(@product.ProductId)">Comprar</button> <!-- 🔹 Botón para comprar -->
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Product")" class="btn btn-primary">Crear nuevo Producto</a>

<script>
    function addToCart(productId) {
        // Simulación de lógica de compra (puedes expandir esto para interactuar con un carrito real)
        alert("Producto agregado al carrito: " + productId);
    }
</script>
