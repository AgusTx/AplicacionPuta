@model Webapp.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<h1>@ViewData["Title"]</h1>

<h4>Create a New Product</h4>
<hr />

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Product Name</label>
        <input type="text" id="Name" name="Name" class="form-control" value="@Model?.Name" required />
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" id="Price" name="Price" class="form-control" value="@Model?.Price" required step="0.01" min="0" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Product</button>
    </div>
</form>

<a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Back to Product List</a>
